<h1>Add Event</h1>
<form action="/event/new" method = "post">
  <label for="name">Name:</label>
  <input type="text" name="name">
  <br>

  <label>Athlete/Team: </label>
  <select name="participation_type">
    <option value="athlete">Athlete</option>
    <option value="team">Team</option>
  </select>

  <br>
  <label for="max_capacity">Maximun entries</label>
  <input type="number" name="max_capacity" min="0">

  <br>
  <label for="world_record">World Record</label>
  <input type="text" name="world_record" min="0">

  <br>
  <label for="sport_id">Sport</label>
  <select name="sport_id">
    <% @sports.each do |sport|%>
      <option value="<%=sport.id%>"><%=sport.name%></option>
    <%end%>
  </select>
 <br>
 <input type="submit" value="Add Event">
</form>